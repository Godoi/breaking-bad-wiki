{
  "name": "breaking-bad-wiki",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest --no-cache",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "jest --coverage",
    "lint:js": "eslint src/**/*.ts --quiet",
    "lint:css": "stylelint --fix ./src/**/*.{css,scss} || echo \"lint faild for some file(s).\"",
    "prettify": "prettier --write ./src/**/*.{css,scss,js,jsx,ts,tsx}",
    "e2e": "cypress open",
    "cypress": "concurrently \"ng serve\" \"cypress open\""
  },
  "private": true,
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/src/test.ts",
      "<rootDir>/cypress/"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/build/InlineFilesTransformer",
          "jest-preset-angular/build/StripStylesTransformer"
        ]
      }
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-rscss/config",
      "stylelint-a11y/recommended"
    ],
    "plugins": [
      "stylelint-scss",
      "stylelint-no-indistinguishable-colors",
      "stylelint-declaration-block-no-ignored-properties"
    ],
    "rules": {
      "plugin/stylelint-no-indistinguishable-colors": true,
      "plugin/declaration-block-no-ignored-properties": true
    }
  },
  "dependencies": {
    "@angular/animations": "~8.2.13",
    "@angular/common": "~8.2.13",
    "@angular/compiler": "~8.2.13",
    "@angular/core": "~11.0.5",
    "@angular/forms": "~8.2.13",
    "@angular/http": "^7.2.16",
    "@angular/platform-browser": "~8.2.13",
    "@angular/platform-browser-dynamic": "~8.2.13",
    "@angular/router": "~8.2.13",
    "bootstrap": "^4.4.1",
    "ngx-cookie-service": "^2.4.0",
    "ngx-infinite-scroll": "^8.0.1",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.18",
    "@angular/cli": "~8.3.18",
    "@angular/compiler-cli": "~8.2.13",
    "@angular/language-service": "~8.2.13",
    "@cypress/webpack-preprocessor": "^4.1.1",
    "@types/jest": "^25.1.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "concurrently": "^5.1.0",
    "cypress": "^4.0.2",
    "jest": "^25.1.0",
    "jest-createspyobj": "^1.2.2",
    "jest-preset-angular": "^8.0.0",
    "stylelint": "^13.2.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-no-indistinguishable-colors": "^1.3.0",
    "stylelint-rscss": "^0.4.0",
    "stylelint-scss": "^3.14.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3"
  }
}
